<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

        <beans>
        <bean id="triangle" class="com.spring.examples.Triangle">
        <property name="xy" ref="zeroCoordinate"></property>
        <property name="yz" ref="firstCoordinate"></property>
        <property name="xz" ref="secondCoordinate"></property>
        </bean>
        <bean id="zeroCoordinate" class="com.spring.examples.Line">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
        </bean>
        <bean id="firstCoordinate" class="com.spring.examples.Line">
        <property name="x" value="-20"></property>
        <property name="y" value="0"></property>
        </bean>
        <bean id="secondCoordinate" class="com.spring.examples.Line">
        <property name="x" value="20"></property>
        <property name="y" value="0"/>
        </bean>
       
        </beans>